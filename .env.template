# Finance App Backend - Environment Variables Template
# Copy this file to .env for development or .env.production for production

# ================================
# DATABASE CONFIGURATION
# ================================

# For PRODUCTION (Xata PostgreSQL - 15GB Free Tier)
# Get credentials from: https://app.xata.io/settings
# Format: postgresql://[Workspace_Id]:[API_Key]@[Region].sql.xata.sh:5432/[Database]:[Branch]?sslmode=require
XATA_DATABASE_URL=postgresql://ws1234:xau_apikey123456@us-east-1.sql.xata.sh:5432/finance-app-backend:main?sslmode=require

# For DEVELOPMENT (Local PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=finance_app
DB_USER=postgres
DB_PASSWORD=your_local_password

# ================================
# APPLICATION CONFIGURATION
# ================================

NODE_ENV=development
PORT=3000

# ================================
# JWT CONFIGURATION
# ================================

# Generate secure random strings (minimum 32 characters)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_minimum_32_characters

# Token expiration times
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ================================
# SECURITY CONFIGURATION
# ================================

# Password hashing rounds (12 for production, 10 for development)
BCRYPT_ROUNDS=10

# CORS allowed origins (comma separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# LOGGING CONFIGURATION
# ================================

# Log levels: error, warn, info, debug
LOG_LEVEL=debug
